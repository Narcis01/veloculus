<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.miele.javafx.controller.UpdateDeveloperController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>


    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>


    </rowConstraints>
    <Label styleClass="title" text="Update developer" GridPane.columnIndex="1" GridPane.halignment="CENTER"
           GridPane.valignment="CENTER"/>
    <Label styleClass="title" text="Developer name:" GridPane.columnIndex="0" GridPane.columnSpan="1"
           GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
    <Label styleClass="title" text="New name: " GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="2"
           GridPane.valignment="CENTER"/>

    <Label styleClass="title" text="New team: " GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="LEFT"
           GridPane.valignment="CENTER"/>
    <Button onAction="#cancel" text="Cancel" GridPane.halignment="CENTER" GridPane.rowIndex="4" styleClass="migration"
            GridPane.valignment="CENTER"/>
    <Button onAction="#submit" text="Submit" GridPane.columnIndex="2" GridPane.halignment="CENTER" styleClass="migration"
            GridPane.rowIndex="4" GridPane.valignment="CENTER"/>
    <TextField fx:id="newName"  GridPane.columnIndex="1" GridPane.halignment="CENTER"
               GridPane.rowIndex="2" GridPane.valignment="CENTER" promptText="ex: Andrei"/>
    <ComboBox fx:id="comboDev" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="CENTER"
              GridPane.valignment="CENTER"/>
    <ComboBox fx:id="comboTeam" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="CENTER"
              GridPane.valignment="CENTER"/>
</GridPane>
